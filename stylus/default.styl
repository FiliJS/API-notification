body
    background $ColorDark
    color white
    font-family $fontDefault
    
h1
h2
h3
h4
h5
h6
    font-family $fontTitles
    
a
    text-decoration none
    color $ColorBlue
    
ul[class*="list"]
    padding 0
    margin 0
    list-style none

//OOCSS

.btn
    padding 0.8rem 1rem
    box-sizing border-box
    border 1px solid $ColorBlue
    font-size 1rem
    box-shadow 2px 2px 0px $ColorBlue
    display inline-block
    transition 0.3s
    
    &:hover
        color black
        background white
    
    &:active
        transform scale(0.9)
    
.wrap-center
    margin 0 auto
    max-width 900px
    
.normal
.warning
    max-width 700px
    margin 1rem auto
    text-align center
    font-weight 700
    
.warning
    color $ColorRed
    
.demo
    padding 0.5rem
    
@media all and (min-width 768px)
    .btn
        padding 0.9rem 1.1rem
        font-size 1.1rem
        
    .normal
    .warning
        font-size 1.2rem
        
@media all and (min-width 1080px)
    .btn
        padding 0.9rem 1.1rem
        font-size 1.2rem
        
    .normal
    .warning
        font-size 1.3rem
        
    
    
